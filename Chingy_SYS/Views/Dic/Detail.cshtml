@model System.Int32
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*@Html.Hidden("TableID", @Model)*@

<table id="dg" title="字典参数" class="easyui-datagrid" style="width: 100%; height: 205px" rownumbers="true" fitcolumns="true" url="Dic/GetDicColByTableCode/@Model" toolbar="#toolbar">
    <thead>
        <tr>
            <th field="ID" hidden="true">ID</th>
            <th field="Table" hidden="true">Table</th>
            <th field="Name" width="200">名称</th>
            <th field="Code" width="200">编码</th>
        </tr>
    </thead>
</table>

<div id="#toolbar">
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-add" plain="true" onclick="newCol()">添加新字段</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-edit" plain="true" onclick="editCol()">编辑字段</a>
    <a href="javascript:void(0)" class="easyui-remove" iconcls="icon-remove" plain="true" onclick="destroyCol()">移除字段</a>
</div>


<div id="dlg" class="easyui-dialog" title="编辑字段" style="width: 400px; height: 280px; padding: 10px 20px" closed="true" buttons="#dlg-buttons">
    <form id="fm" method="post"
        novalidate>

        <input type="hidden" name="ID" />
        <input type="hidden" name="Table" value="@Model"/>
        <div class="fitem">
            <label>字段名</label>
            <input name="Name" class="easyui-textbox" required="true" />
        </div>
        <div class="fitem">
            <label>字段编码</label>
            <input name="Code" class="easyui-textbox" required="true" />
        </div>
    </form>
</div>
<div id="dlg-buttons">
    <a href="javascript:void(0)" class="easyui-linkbutton c6" iconcls="icon-ok" onclick="saveCode()" style="width: 90px; flex-align: center;">保存</a>
    <a href="javascript:void(0)" calss="easui-linkbutton c6" iconcls="icon-cancel" onclick="javascript:$('#dlg').dialog('close')" style="width: 90px"></a>
</div>
