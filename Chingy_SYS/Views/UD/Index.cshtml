<table id="dg" title="系统表" class="easyui-datagrid" style="width: 100%; height: 250px" url="UD/GetTableList" toolbar="#toolbar" pagination="true" rownumbers="true" fitcolumns="true" singleselect="true">
    <thead>
        <tr>
            <th field="ID" hidden="true">ID</th>
            <th field="Name" width="50">表名</th>
            <th field="DisplayName" width="50">显示名称</th>
            <th field="ExtFlag" width="50">可扩展字段</th>
            <th field="ModelName" width="50">Model实体名称</th>
            <th field="TreeFlag" width="50">树形结构标志</th>
            <th field="InsertTime" width="50" formatter="Common.DateFormatter">新增时间</th>
        </tr>
    </thead>
</table>
<div id="toolbar">
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-add" plain="true" onclick="newTable()">添加新表</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-edit" plain="true" onclick="editUser()">编辑表</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-remove" plain="true" onclick="destroyTable()">移除表</a>
</div>


